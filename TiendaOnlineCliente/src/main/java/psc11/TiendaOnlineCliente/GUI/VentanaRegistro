package psc11.TiendaOnlineCliente.GUI;

import javax.swing.JFrame;
import javax.swing.JPanel;
import javax.swing.JPasswordField;

import java.awt.Color;
import java.awt.Font;
import java.awt.SystemColor;
import java.awt.event.ActionEvent;
import java.awt.event.ActionListener;

import javax.swing.JLabel;
import javax.swing.JOptionPane;
import javax.swing.SwingConstants;
import javax.swing.border.EmptyBorder;

import javax.swing.JButton;
import javax.swing.JTextField;


public class VentanaRegistro extends JFrame {

    private static final long serialVersionUID = 1L;

    private JPanel panelContenido;
    private JLabel etiquetaNombre = new JLabel();
    private JLabel etiquetaContraseña = new JLabel();
    private JTextField campoNombre = new JTextField();
    private JPasswordField campoContraseña = new JPasswordField();
    private JButton botonRegistrarse = new JButton();
    private JButton botonIniciarSesion = new JButton();

    public VentanaRegistro() {

        panelContenido = new JPanel();
        panelContenido.setBorder(new EmptyBorder(5, 5, 5, 5));
        setContentPane(panelContenido);
        panelContenido.setLayout(null);

        JLabel etiquetaTitulo = new JLabel("Tienda de Comida Online");
        etiquetaTitulo.setFont(new Font("Tahoma", Font.BOLD, 30));
        etiquetaTitulo.setHorizontalAlignment(SwingConstants.CENTER);
        etiquetaTitulo.setBounds(10, 20, 414, 50);
        panelContenido.add(etiquetaTitulo);

        // nombre usuario
        etiquetaNombre.setText("Nombre:");
        etiquetaNombre.setBounds(50, 100, 100, 25);
        etiquetaNombre.setFont(new Font("Tahoma", Font.PLAIN, 16));
        panelContenido.add(etiquetaNombre);

        campoNombre.setBounds(160, 100, 200, 25);
        panelContenido.add(campoNombre);

        // contraseña
        etiquetaContraseña.setText("Contraseña:");
        etiquetaContraseña.setBounds(50, 150, 100, 25);
        etiquetaContraseña.setFont(new Font("Tahoma", Font.PLAIN, 16));
        panelContenido.add(etiquetaContraseña);

        campoContraseña.setBounds(160, 150, 200, 25);
        panelContenido.add(campoContraseña);

        // Botón registrarse
        botonRegistrarse.setForeground(SystemColor.text);
        botonRegistrarse.setBackground(new Color(0, 153, 51));
        botonRegistrarse.setBounds(50, 200, 310, 30);
        botonRegistrarse.setText("Registrarse");
        botonRegistrarse.setFont(new Font("Tahoma", Font.BOLD, 16));
        panelContenido.add(botonRegistrarse);

        // Botón para volver a inicio sesión
        botonIniciarSesion.setBackground(SystemColor.inactiveCaptionBorder);
        botonIniciarSesion.setBounds(50, 250, 310, 30);
        botonIniciarSesion.setText("<< Iniciar Sesión");
        botonIniciarSesion.setFont(new Font("Tahoma", Font.BOLD, 16));
        panelContenido.add(botonIniciarSesion);

        // Acción de botón registrarse
        botonRegistrarse.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                String hostname = "localhost";
                String port = "8080";

                nuevoCliente.registrarUsuario(campoNombre.getText(), new String(campoContraseña.getPassword()), 0.0, 0);
                JOptionPane.showMessageDialog(panelContenido, "Usuario registrado con éxito", "Registro", JOptionPane.INFORMATION_MESSAGE);
            }
        });

        // Acción de botón volver a inicio sesión
        botonIniciarSesion.addActionListener(new ActionListener() {
            @Override
            public void actionPerformed(ActionEvent e) {
                new VentanaLogin();
                dispose();
            }
        });

        setDefaultCloseOperation(JFrame.EXIT_ON_CLOSE);
        setSize(450, 350);
        setVisible(true);
        setLocationRelativeTo(null);
        setTitle("Registro de Nuevo Usuario");
    }

    public static void main(String[] args) {
        new VentanaRegistro();
    }
}
